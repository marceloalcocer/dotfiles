"""Site Specific"""
site "https://mail.google.com/*" {
	unmap j
	unmap k
	unmap c
	unmap /
	unmap n
	unmap p
	unmap e
	unmap ]
	unmap s
	unmap P
	unmap a
	unmap r
	unmap f
	unmap #
	unmap x
	map ? <S-?>
}
site "https://calendar.google.com/*" {
	unmap j
	unmap n
	unmap r
	unmap t
	unmap +
	unmap /
	unmap s
	unmap 1
	unmap d
	unmap 2
	unmap w
	unmap 3
	unmap m
	unmap 4
	unmap x
	unmap 5
	unmap a
	unmap c
	unmap e
	unmap z
}
site "*://feedly.com/*" {
	unmap j
	unmap k
	unmap m
	unmap v
	unmap s
}
