# If not running interactively, don't do anything
case $- in
    *i*) ;;
      *) return;;
esac



#### General ####

# History
HISTCONTROL=ignoreboth           # Ignore duplicate lines or lines starting with space
shopt -s histappend              # append to the history file, don't overwrite it
HISTSIZE=1000
HISTFILESIZE=2000

# Globbing
shopt -s globstar                # Use ** globbing

# Enable completion
if ! shopt -oq posix; then
  if [ -f /usr/share/bash-completion/bash_completion ]; then
    . /usr/share/bash-completion/bash_completion
  elif [ -f /etc/bash_completion ]; then
    . /etc/bash_completion
  fi
fi

# Aliases
if [ -f ~/.bash_aliases ]; then
    . ~/.bash_aliases
fi

# Functions
if [ -f ~/.bash_functions ]; then
    . ~/.bash_functions
fi

# Environment variables
if [ -f ~/.bash_env ]; then
    . ~/.bash_env
fi


#### Display ####

# Dynamics window size
shopt -s checkwinsize            # Update LINES and COLUMNS after each command if required

# Colors
if [ -x /usr/bin/dircolors ]; then                                                         # ls
    test -r ~/.dircolors && eval "$(dircolors -b ~/.dircolors)" || eval "$(dircolors -b)"
fi
export GCC_COLORS='error=01;31:warning=01;35:note=01;36:caret=01;32:locus=01:quote=01'     # GCC

# Terminal window title
#set_xterm_title

# Prompt string
set_ps1
