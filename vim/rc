" System Configuration "
set nomodeline
set nocompatible
set encoding=utf-8
set scrolloff=3
set autoindent
set showmode
set showcmd
set hidden
set wildmenu
set wildmode=list:longest
set novisualbell
set ttyfast
set ruler
set backspace=indent,eol,start
set laststatus=1
set number
set relativenumber
set ignorecase
set smartcase
set gdefault
set incsearch
set showmatch
set hlsearch
set listchars=tab:»\ ,extends:›,precedes:‹,nbsp:␣,trail:·,eol:↲
set list
set spellfile=~/.vim/spell/custom-misc.utf-8.add
set tabstop=4
set shiftwidth=4
set noexpandtab
set foldminlines=0
set history=5000
set viminfo='100,<50,s10,h,:5000
colorscheme slate

" Mappings "
let mapleader = ","
map <leader>t :bn<cr>
map <leader>r :bp<cr>
nnoremap <leader>/ :noh<cr>
nnoremap <tab> %
vnoremap <tab> %
nnoremap <leader>ev <C-w><C-v><C-w><C-l>:e $MYVIMRC<cr>
nnoremap <space> <C-f>
nnoremap <S-space> <C-b>
nnoremap <A-j> <C-d>
nnoremap <A-k> <C-u>
nnoremap <A-i> ^
nnoremap <A-a> $
nnoremap j gj
nnoremap k gk
nnoremap <C-j> <C-w>j
nnoremap <C-k> <C-w>k
nnoremap <C-h> <C-w>h
nnoremap <C-l> <C-w>l
nnoremap <leader>s 1z=
nnoremap <leader>S z=
nnoremap <leader>cd :cd %:p:h<cr>:pwd<cr>
nnoremap <leader>y "+y
nnoremap <leader>p "+p
nnoremap <leader>P "+P
nnoremap <leader>qw :set wrap!<cr>
nnoremap <leader>qs :set spell!<cr>
command Term vs|:term ++curwin
cnoreabbrev vterm Term
cnoreabbrev bdd b#\|bd#
cnoreabbrev gfm2html w !chromium-browser "data:text/html;base64,$(pandoc -f gfm -t html \| base64 -w 0)"

" Filetype Handling "
filetype indent on
filetype plugin on
autocmd FileType gitcommit setlocal spell textwidth=72
autocmd FileType rst nnoremap <leader>m i:math:``<Esc>i
autocmd FileType rst nnoremap <leader>M a:math:``<Esc>i
autocmd FileType markdown let g:markdown_folding=1
autocmd FileType markdown let g:markdown_fenced_languages=['python', 'html', 'bash=sh']
autocmd BufWinEnter * if &buftype=="terminal" | setlocal noruler nonumber norelativenumber nolist | endif

